// Define Problem type
export const Problem = {
    id: 'number', 
    condition: 'string', 
    status: 'string',  // Can be 'Active' or 'Resolved'
    dateRecorded: 'string'  // Date when the problem was recorded
  };
  
  // Define Medication type
  export const Medication = {
    id: 'number',
    name: 'string',
    dosage: 'string',
    frequency: 'string', 
    dateStarted: 'string'  // Date when medication was started
  };
  
  // Define Allergy type
  export const Allergy = {
    id: 'number',
    name: 'string',
    severity: 'string', // Can be 'Mild', 'Moderate', 'Severe'
    dateRecorded: 'string'  // Date when the allergy was recorded
  };
  